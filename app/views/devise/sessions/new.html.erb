  <div style="display:flex;justify-content:space-evenly;">

        <div class="create_account_form">
          <h4 style="display:flex;justify-content:center; margin-bottom: 1rem;">Pas encore de compte?</h3>
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
              data: {turbo: false}) do |f| %>

              <div class="form-inputs">
                <%= f.input :email,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "email" },
                            label: "Entrez votre adresse e-mail",
                            label_html:{ class:"labelcolor" } %>
                <%= f.input :password,
                            required: true,
                            hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                            input_html: { autocomplete: "new-password" },
                            label: "Choisissez un mot de passe",
                            label_html:{ class:"labelcolor" } %>
                <%= f.input :password_confirmation,
                            required: true,
                            input_html: { autocomplete: "new-password" },
                            label: "Confirmez le mot de passe",
                            label_html:{ class:"labelcolor" }%>
              </div>

              <div class="form-actions d-flex justify-content-center">
                <button class="btn btn-primary"> <%= f.button :submit, "Créer" %></button>
              </div>
              <%#= render "devise/shared/links" %>
            <% end %>
            <p style="text-align:center; color:black; margin-top:2rem;">Vous ne voulez pas créer de compte ?</p>
            <div class="d-flex justify-content-center">
              <%= button_to "Continuez en tant qu'invité", sign_in_as_guest_user_path, method: :post, class: "btn btn-primary" %>
            </div>
        </div>

        <div class="sign_up_form">
          <h4 style="text-align:center; color:black; margin-bottom: 1rem;">Se connecter</h3>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
            data: {turbo: false}) do |f| %>
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          label: "Adresse e-mail",
                          input_html: { autocomplete: "email" },
                          label_html:{ class:"labelcolor" }  %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" },
                          label: "Saisissez votre mot de passe",
                          label_html:{ class:"labelcolor" }  %>
              <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean, label_html:{ class:"labelcolor" }  if devise_mapping.rememberable? %>
            <div class="form-actions d-flex justify-content-center">
              <button class="btn btn-primary"><%= f.button :submit, "Connexion" %></button>
            </div>
              <%= render "devise/shared/links" %>
            </div>
          <% end %>
        </div>

  </div>
